<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$ForecastFragment">

    <ListView
        android:id="@+id/listview_forecast"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ForecastListStyle"/>

    <!--This sibling view for list view is used to be set as an empty view
        while no weather information is available. It can be set with the
        help of setEmptyView method-->
    <TextView
        android:id="@+id/listview_forecast_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_weather_information"
        android:gravity="center_horizontal"/>

</FrameLayout>
